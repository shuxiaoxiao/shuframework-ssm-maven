	<!-- 这个是日志总控制开关，这里面我把“debug“加上去 ，所以上面那个注释的就不要 -->
	<root level="DEBUG">
		<appender-ref ref="debug"></appender-ref>
		<appender-ref ref="STDOUT" />
		<appender-ref ref="com.shuframework" />
	</root>

</configuration>